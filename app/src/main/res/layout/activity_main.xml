<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id = "@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bt setup"/>

    <TextView
        android:id = "@+id/result"
        android:layout_toRightOf="@id/setting"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        android:text="result"
        android:textColor="#dd2323"
        android:textSize="35dp"
        />
    <TextView
        android:id = "@+id/example"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:layout_width="match_parent"
        android:layout_height = "wrap_content"
        android:text="abcdefghijklmnopqrstuvwxyz"
        android:textColor="#77ff66"
        android:textSize="50dp"
        />

    <TextView
        android:id = "@+id/input"
        android:layout_below="@+id/example"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/example"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="50dp"
        />
    <TextView
        android:id = "@+id/symbol"
        android:layout_alignBottom="@+id/input"
        android:layout_toRightOf="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:text="_"
        android:textColor="#ffffff"
        android:textSize="50dp"
        />

    <Views.KeyboardView
        android:id = "@+id/gv"
        android:layout_below="@+id/input"
        android:layout_alignLeft="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <Button
        android:id = "@+id/mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mode"
        android:layout_below="@+id/setting"
        android:layout_alignParentStart="true" />

    <Button
        android:id = "@+id/mode2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mode"
        android:layout_alignTop="@+id/example"
        android:layout_alignParentStart="true" />

    <Button
        android:id = "@+id/mode3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mode"
        android:layout_below="@+id/mode2"
        android:layout_alignParentStart="true" />

</RelativeLayout>
